{
	"compilerOptions": {
		"outDir": "./build",
		"noImplicitAny": true,
		"isolatedModules": true,
		"module": "ESNext",
		"target": "es5",
		"allowJs": true,
		"strict": true,
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["./config/jest/setupTests.ts", "src", "cypress"]
}
